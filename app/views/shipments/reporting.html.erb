<div class="inner-page">
    <h3>Shipment Reporting</h3>
</div>
<!-- SITE MAIN CONATANT Start -->
<div class="container marginTop30" style="min-height:500px;">
  <div class="row-fluid fom-heading">
    <div class="span12">
      <h4 id="heading">Shipping History</h4>
    </div>
  </div>
  <% if !flash[:notice].nil? %>
    <div class="row-fluid">
        <div class="alert alert-warning">
            <%= flash[:notice] %>
        </div>
    </div>
  <% end %>
  <% if !flash[:message].nil? %>
    <div class="row-fluid">
        <div class="alert alert-success">
            <%= flash[:message] %>
        </div>
    </div>
  <% end %>
  <div class="row-fluid">
    <div class="span6 bg-fom">
        <div class="control-group">
         <label class="control-label" for="inputEmail">Tracking ID</label>
          <%= form_tag reporting_path, :method => 'get' do %>
            <%= text_field_tag :tracking_no, params[:tracking_no], :placeholder=>"Enter Tracking Number",:class => "span12" %>
            <%= submit_tag "Go", :name => nil ,:class=>"btn btn-success pull-right track-search"%>
          <% end %>
        </div>
      </div><!-- Span Closed -->
      <div class="span6 bg-fom">
        <%= form_tag reporting_path, :method => 'get' do %>
          <div class="row-fluid">
            <div class="control-group span6 clander">
              <label class="control-label" for="inputEmail">From</label>
              <%= text_field_tag :shipment_from, params[:shipment_from], :class => "span12 datepicker" %>
              <i class="fa fa-calendar"></i>
            </div>
            <div class="control-group span6 clander">
             <label class="control-label" for="inputEmail">To</label>
             <%= text_field_tag :shipment_to, params[:shipment_to], :class => "span12 datepicker" %>
             <i class="fa fa-calendar"></i>
            </div>
          </div>
        <%= submit_tag "Go", :name => nil ,:class=>"btn btn-success pull-right track-search"%>
          <% end %>
      </div>
  </div>
  <div class="row-fluid">
    <div class="span6 pull-right">
      <ul class="nav nav-pills pull-right">
        <li id="history" class="active"><%= link_to "Shipping History", reporting_path, remote: true %></li>
        <li id="manifest" ><%= link_to "Today's Manifest", manifest_path, remote: true %></li>
        <li><%= link_to "Address listing", address_listing_path%></li>
      </ul>
    </div><!-- Span Closed -->
  </div>
  <div class="row-fluid" id="shipment_table">
    <%= render(:partial => "shipment_table", :object => @shipments) %>
  </div>
  <div class="row-fluid">
    <div id="print_by_date" class="modal hide" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
    <a href="/print_by_date?reporting=1" data-toggle="modal" data-target="#print_by_date" data-remote="true" class="btn btn-success pull-right marginTop20 marginBottom10"><i class="icon-print icon-white"></i>Print Shipment</a>
    <!--<a href="/print-page?reporting=1" class="btn btn-success pull-right marginTop20 marginBottom10"><i class="icon-print icon-white"></i> Print Shipment </a>-->
  </div>
</div>

<!-- SITE MAIN CONATANT Close -->
