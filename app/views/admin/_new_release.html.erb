<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="myModalLabel">User:-<%=@requested_user.company_name %></h3>
</div>
<div class="modal-body">
  <div class="row-fluid">
    <div class="span12 bg-fom">
    <%= form_tag({:action => 'user_shipment_history'}, :remote => true, :method => 'get') do %>
      <%= hidden_field_tag :id,'', :value => @requested_user.id %>
        <div class="row-fluid">
          <div class="control-group span6 clander">
            <label class="control-label" for="inputEmail">From</label>
            <%= text_field_tag :shipment_from, params[:shipment_from], :class => "span12 datepicker1" %>
            <i class="fa fa-calendar"></i>
          </div>
          <div class="control-group span6 clander">
            <label class="control-label" for="inputEmail">TO</label>
            <%= text_field_tag :shipment_to, params[:shipment_to], :class => "span12 datepicker1" %>
            <i class="fa fa-calendar"></i>
          </div>
        </div>
        <%= submit_tag "Find", :name => nil , :id => 'close_btn', :class=>"btn btn-success pull-right track-search" %>
      <% end %>
    </div>
  </div>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>
<script>
  $(document).ready(function() {
    $('#close_btn').click(function(e) {
      e.preventDefault();
      $('#modal-window').modal('hide');
      $('form').submit();
    });
    $('.datepicker1').datepicker({orientation: "auto",  "autoclose": true,format: 'mm-dd-yyyy'});
    $('.datepicker1').datepicker("setDate",new Date());
  });
</script>    
