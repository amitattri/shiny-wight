<%= stylesheet_link_tag "application","bootstrap", media: "all", "data-turbolinks-track" => true %>
<%= stylesheet_link_tag "application", media: "print" %><br/><br/><br/><br/>
<div class='title' style="text-align: center"><b>SHIPMENT DELIVERY LABEL</b></div>
<div class="container marginTop30" style="min-height:500px;">
  <div class="span7 print-lable MarginAuto">
    <div class="row-fluid logo-print">
      <div class="span3 marginBottom10 marginTop10">
        <%= image_tag("logo.png", alt: "Logo") %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span7">
        <b style="margin-bottom: 7px;display:inline-block;">Shipment Tracking Number-</b><%= @shipment.tracking %><br>
        <b style="margin-bottom: 7px;display:inline-block;"">Accepted Person-</b><%= @shipment.user_name_print ? @shipment.user_name_print : '--' %><br>
        <b style="margin-bottom: 7px;display:inline-block;"">Date of Delivery-</b><%= @shipment.deliver_at ? @shipment.deliver_at.strftime("%m/%d/%Y") : '--' %><br>
        <b style="margin-bottom: 7px;display:inline-block;"">Number of Packages-</b><%= @shipment.number_of_packages ? @shipment.number_of_packages : '--' %><br>
      </div>
      <td style="text-align:center"></td>
      <div class="span4">
        <img src="<%=@shipment.signature.url(:thumb)%>" />
      </div>
    </div>
  </div><br/><br/>
  <div class="row-fluid" style="text-align: center">
    <button class="btn btn-success" type="button" onClick="window.print()"><i class="icon-print icon-white"></i> Print Shipment</button><br/><br/>
    <a href="shipment_history">Back to Shipping History</a>
  </div>
</div>
