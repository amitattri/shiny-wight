<div class="inner-page">
  <h3>Forgot Password?</h3>
</div>
<!-- SITE MAIN CONATANT Start -->
<div class="container marginTop30" style="min-height:500px;">
  <div class="span6 print-lable MarginAuto">
    <div class="log-name">Forgot Password</div>
    <div class="row-fluid">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <span style="color:red"><%= devise_error_messages! %></span>
      <div class="control-group">
        <label class="control-label" for="inputEmail">Please Enter Your Email<span style="color:red"> *</span></label>
        <%= f.email_field :email, :autofocus => true, :class => "span12", :id => "inputEmail" %>
      </div>
      <div class="control-group">
      	<%= f.submit "Send me reset password instructions" ,:class => "btn btn-success pull-right marginTop10 marginBottom10"%>
      </div>
      <% end %>
    </div>
  </div><!-- Span Closed -->
</div>

<!-- SITE MAIN CONATANT Close -->
