<%= form_for("user", :url => user_session_path,:html => { :style => 'margin: 0 0 0px;', :id => 'formone' }) do |f| %>
<button id="login-popup" data-toggle="dropdown" class="btn btn-success dropdown-toggle">Log In <span class="caret"></span></button>
	<ul id="btnGrouup" class="dropdown-menu">
        <li><%= f.email_field :email, :autofocus => true, :required =>'required', :placeholder=> "Email", :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %></li>
        <li><%= f.password_field :password, :placeholder => "Password", :required =>'required' %></li>
        <%= link_to "Forgot your password?", new_password_path(resource_name), :style=> "font-size: 14px;" %>
        <li class="divider"></li>
        <%= f.submit "Sign In", :class=> "btn btn-success" %>
    </ul>
<% end %>
<script>
  $("#btnGrouup").on("click", function(e){
    $(".btn-group").addClass("open");
    e.stopPropagation();
  });
  $(document).keypress(function (e) {
  if (e.which == 13) {
    $('#formone').submit();
    return false;
  }
});
</script>
